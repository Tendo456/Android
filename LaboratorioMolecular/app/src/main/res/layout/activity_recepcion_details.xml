<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Actividades.RecepcionDetails">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:background="@color/indigo_500"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/RDfecha"
                android:layout_width="match_parent"
                android:text="Fecha"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_height="wrap_content" />
        </androidx.appcompat.widget.Toolbar>

        <TextView
            android:id="@+id/RDhora"
            android:layout_width="match_parent"
            android:text="Hora"
            android:padding="10dp"
            android:textColor="@color/indigo_200"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/RDn_envio"
            android:layout_width="match_parent"
            android:text="Número de Envío"
            android:padding="10dp"
            android:textColor="@color/indigo_200"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/RDq_muestras"
            android:layout_width="match_parent"
            android:text="Cantidad de Muestras"
            android:padding="10dp"
            android:textColor="@color/indigo_200"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/RDoperador"
            android:layout_width="match_parent"
            android:text="Operador"
            android:padding="10dp"
            android:textColor="@color/indigo_200"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/RDdni"
            android:layout_width="match_parent"
            android:text="DNI"
            android:padding="10dp"
            android:textColor="@color/indigo_200"
            android:layout_height="wrap_content" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>