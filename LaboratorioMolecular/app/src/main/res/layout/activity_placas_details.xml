<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Actividades.PlacasDetails">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/id_placa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ID_placa" />

        <TextView
            android:id="@+id/N_placa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="N_placa" />

        <TextView
            android:id="@+id/fechaP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="fechaP" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <com.shuhart.stepview.StepView
            android:id="@+id/step_view"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:padding="5dp"
            app:sv_animationType="All"
            app:sv_doneCircleColor="@color/indigo_500"
            app:sv_doneCircleRadius="12dp"
            app:sv_doneStepLineColor="@color/indigo_500"
            app:sv_doneStepMarkColor="@color/white"
            app:sv_doneTextColor="@color/gray"
            app:sv_nextStepLineColor="@color/indigo_200"
            app:sv_nextTextColor="@color/indigo_200"
            app:sv_selectedCircleColor="@color/indigo_400"
            app:sv_selectedCircleRadius="12dp"
            app:sv_selectedStepNumberColor="@color/white"
            app:sv_selectedTextColor="@color/indigo_500"
            app:sv_stepLineWidth="1dp"
            app:sv_stepNumberTextSize="12sp"
            app:sv_stepPadding="4dp"
            app:sv_stepViewStyle="@style/StepView"
            app:sv_steps="@array/procesos" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>